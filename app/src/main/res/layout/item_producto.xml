<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:padding="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="10dp"
            android:id="@+id/imageViewProducto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/leche_template"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cereral Corn"
            android:layout_below="@+id/imageViewProducto"
            />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textStyle="bold"
            android:text="S/24.00"
            android:layout_below="@+id/tvDescripcion"
            android:gravity="center_vertical"

            />

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/tvPrecioAntiguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="S/64.00"
            android:layout_below="@+id/tvDescripcion"
            android:background="@drawable/ic_linea"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/tvPrecio"

            />

        <ImageView
            android:id="@+id/btnAgregar"
            android:padding="4dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_add_producto_2"
            android:tint="#0089BA"
            android:layout_below="@+id/tvDescripcion"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/imagenOferta"
            android:padding="0dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_rebaja"


            android:layout_alignParentRight="true"
            />

    </RelativeLayout>



</android.support.v7.widget.CardView>