<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E7E9"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_border_total_blanco"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/leche_template"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#0933BA"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/imageView"
                    android:text="Arroz Integral Metro Bolsa 750 g"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#6aa568"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/textViewShortDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewTitle"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/imageView"
                    android:text="Rompe Olla"
                    android:textColor="#8e8f8f"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_marginBottom="15dp"
                    android:layout_above="@+id/btnEliminar"

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"

                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"

                    android:background="@color/colorPrimary"
                    android:text="S/25.00"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                    android:textColor="#4d4d4d"
                    android:textStyle="bold"
                    android:textSize="14sp"
                     />


                    <Button
                        android:id="@+id/btnRestar"
                        android:layout_marginTop="0dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/imageView"
                        android:layout_marginLeft="15dp"
                        android:text="-"
                        android:textSize="16sp"
                        android:textColor="#fff"
                        android:background="@drawable/bg_horizontal_left_border_azuleable"

                        />
                    <Button
                        android:id="@+id/btnCantidad"
                        android:layout_marginTop="0dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/imageView"
                        android:layout_toRightOf="@id/btnRestar"
                        android:text="1"
                        android:textSize="14sp"
                        android:textColor="#7f8282"
                        android:background="@drawable/bg_horizontal_medium_border"
                        />
                    <Button
                        android:id="@+id/btnSumar"
                        android:layout_marginTop="0dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/imageView"
                        android:layout_toRightOf="@id/btnCantidad"
                        android:text="+"
                        android:textSize="16sp"
                        android:textColor="#fff"
                        android:background="@drawable/bg_horizontal_right_border"
                        />

                <Button
                    android:id="@+id/btnEliminar"
                    android:layout_marginTop="0dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/imageView"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:drawableTop="@drawable/ic_eliminar"
                    android:drawableTint="#da6469 "
                    android:textColor="#fff"
                    android:background="#fff"
                    />

            </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>