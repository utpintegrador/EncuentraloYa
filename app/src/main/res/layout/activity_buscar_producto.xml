<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Implement.BuscarProductoActivity">

    <!-- SEARCH -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/bg_border_radius">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:tint="#0089BA"
                    app:srcCompat="@drawable/ic_buscar" />

                <EditText
                    android:id="@+id/search_product"
                    android:layout_width="294dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="Buscar"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#797D7F" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- CATEGORIAS -->
    <RelativeLayout
        android:id="@+id/body_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">


        <!-- Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--  ITEM -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_manzana"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:text="Alimentos"
                    android:textColor="#797D7F"
                    android:textSize="12dp" />

            </LinearLayout>

            <!--  ITEM -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_lacteos"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:text="LÃ¡cteos"
                    android:textColor="#797D7F"
                    android:textSize="12dp" />

            </LinearLayout>

            <!--  ITEM -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_conservas"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:text="Conservas"
                    android:textColor="#797D7F"
                    android:textSize="12dp" />

            </LinearLayout>

            <!--  ITEM -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_bebida"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:text="Bebidas"
                    android:textColor="#797D7F"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <!-- FILTROS -->
    <RelativeLayout
        android:id="@+id/body_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_one"
        android:background="#E5E7E9">

        <!-- ordernar -->
        <RelativeLayout
            android:id="@+id/mnu_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="#E5E7E9"
                    android:tint="#0089BA"
                    app:srcCompat="@drawable/ic_ordenar_lista_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ORDENAR"
                    android:textColor="#0089BA"
                    android:textSize="12dp" />

            </LinearLayout>


        </RelativeLayout>

        <!-- filtrar -->
        <RelativeLayout
            android:id="@+id/mnu_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:backgroundTint="#E5E7E9"
                android:tint="#0089BA"
                app:srcCompat="@drawable/ic_filtro" />

        </RelativeLayout>

    </RelativeLayout>

    <!-- ITEMS -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/body_two">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_products"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </RelativeLayout>


    <!-- FOOTER MENU-->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="#0089BA"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--INICIO-->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#0089BA"
                android:drawableTop="@drawable/ic_home"
                android:drawableTint="#80DEEA"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Incio"
                android:textAllCaps="false"
                android:textColor="#80DEEA" />


            <!--BUSCAR-->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#0089BA"
                android:drawableTop="@drawable/ic_buscar"
                android:drawableTint="#fff "
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Buscar"
                android:textAllCaps="false"
                android:textColor="#fff" />


            <!--CARRITO-->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#0089BA"
                android:drawableTop="@drawable/ic_carito"
                android:drawableTint="#80DEEA"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Carrito"
                android:textAllCaps="false"
                android:textColor="#80DEEA" />


            <!--PERFIL-->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#0089BA"
                android:drawableTop="@drawable/ic_usuario"
                android:drawableTint="#80DEEA"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Perfil"
                android:textAllCaps="false"
                android:textColor="#80DEEA" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>