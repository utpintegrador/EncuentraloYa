<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Implement.DetalleTiendaActivity">

    <ImageButton
        android:id="@+id/btn_volver"
        android:layout_marginLeft="5dp"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_izquierda"
        android:backgroundTint="#0089BA"
        />

    <RelativeLayout
        android:id="@+id/body_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/btn_volver"
        android:background="#0089BA"
        >




        <ImageView

            android:id="@+id/imgView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_tienda"
            android:layout_marginLeft="70dp"
            android:layout_marginVertical="40dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIENDA 2"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="35dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/body_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="01 May, 2020"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:textSize="17dp"
            android:textAlignment="inherit"
            android:gravity="center_vertical"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_below="@+id/body_2"
        android:background="@drawable/bg_border_total_blanco"
        >


        <ImageView
            android:padding="4dp"
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_telefono"
            android:layout_gravity="center"
            android:tint="#7B7D7D"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvTienda"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:text="+998 525 632"
            android:layout_toRightOf="@id/imageView"
            android:layout_toLeftOf="@+id/imageVer"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvEstadoPedido"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:text="Movil"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@+id/tvTienda"
            android:gravity="center_vertical"
            />




    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitulo"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="OFERTAS"
        android:layout_below="@+id/rl_telefono"
        android:textColor="#0089BA"
        />

    <RelativeLayout
        android:id="@+id/rd_body_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvTitulo"
        >


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:overScrollMode="never"
            ></android.support.v7.widget.RecyclerView>


    </RelativeLayout>


</RelativeLayout>