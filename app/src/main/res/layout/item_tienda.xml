<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >


        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_border_total_blanco"
        >

        <ImageView
            android:padding="10dp"
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_market"
            android:layout_gravity="center"
            android:tint="#F4F6F7 "
            android:background="#85C1E9"
            />

        <ImageView
            android:padding="7dp"
            android:id="@+id/imageTienda"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_market"
            android:tint="#888585"
            android:layout_toRightOf="@id/imageView"
            />
        <ImageView
            android:padding="5dp"
            android:id="@+id/imageViewUbicacion"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_ubicacion"
            android:tint="#17A589 "
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@+id/imageTienda"
            />


        <TextView
            android:id="@+id/tvTienda"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:text="Tienda Pepido"
            android:layout_toRightOf="@id/imageTienda"
            android:layout_toLeftOf="@+id/imageVer"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tvKilometros"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:text="A 2KM"
            android:layout_toRightOf="@id/imageTienda"
            android:layout_below="@+id/tvTienda"
            android:gravity="center_vertical"
            />


        <ImageView
            android:padding="5dp"
            android:id="@+id/img_selected"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_check_circle"
            android:layout_gravity="center"
            android:tint="#17A589"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>