<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/bg_border_total_blanco"
            >



            <ImageView
                android:padding="5dp"
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:src="@drawable/leche_template"
                android:layout_gravity="center"
                />



            <TextView
                android:id="@+id/tvProducto"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textStyle="bold"
                android:text="l"
                android:layout_toRightOf="@id/imageView"
                android:gravity="center_vertical"
                />



            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:text="l"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@+id/tvProducto"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tvCantidad"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="10sp"
                android:text="l"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@+id/tvDescripcion"
                android:gravity="center_vertical"
                />


            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#2ECC71"
                android:layout_marginRight="10dp"
                android:text="S/120.00"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvDescripcion"
                />


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>