<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallePedidoActivity">

    <!-- HEADER MENU-->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#0089BA"

            >
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_izquierda"
                android:backgroundTint="#fff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="DETALLE DE PEDIDO : 10002"
                android:gravity="center"
                />

        </LinearLayout>


    </RelativeLayout>
    <!-- HEADER MENU-->
    <RelativeLayout
        android:id="@+id/detalleVendedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        >


        <ImageView
            android:padding="7dp"
            android:id="@+id/imageTienda"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_market"
            android:tint="#888585"

            />

        <ImageView
            android:padding="7dp"
            android:id="@+id/imageTelefono"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_telefono"
            android:layout_below="@+id/imageTienda"
            android:tint="#888585"

            />

        <ImageView

            android:padding="7dp"
            android:id="@+id/imageViewAlerta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_alerta"
            android:tint="#F4D03F "
            android:layout_below="@+id/imageTelefono"
            />
        <ImageView
            android:padding="7dp"
            android:id="@+id/imageViewCheck"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_verificado"
            android:tint="#2ECC71 "

            android:layout_below="@+id/imageTelefono"
            />

        <TextView
            android:id="@+id/tvTienda"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:text="Tienda Pepido"
            android:layout_toRightOf="@id/imageTienda"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tvtelefono"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:text="999 005 256"
            android:layout_toRightOf="@id/imageTienda"
            android:layout_below="@+id/imageTienda"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tvEstadoPedido"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:text="Pendiente"
            android:layout_toRightOf="@id/imageTienda"
            android:layout_below="@+id/imageTelefono"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tvfecha"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#E74C3C"
            android:text="12-05-2019"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imageTelefono"

            />

        <View style="@style/Seperator"
            android:layout_below="@+id/tvfecha"
            />

    </RelativeLayout>


    <!-- ITEMS -->
    <RelativeLayout
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/detalleVendedor"
        android:layout_above="@+id/body_sub"
        >

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:overScrollMode="never"
            ></android.support.v7.widget.RecyclerView>

    </RelativeLayout>



    <!-- SUB TOTAL -->
    <RelativeLayout
        android:id="@+id/body_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        >

        <View style="@style/Seperator"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/ed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:textSize="16dp"
            />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/ed_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/78.00"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_below="@+id/ed_title"
            />




    </RelativeLayout>



</RelativeLayout>