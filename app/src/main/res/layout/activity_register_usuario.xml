<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Implement.RegisterUsuarioActivity">

    <!-- Header aligned to bottom -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#354A6B"
            >

        </LinearLayout>

    </RelativeLayout>

    <!-- Header aligned to top login -->
    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_encuentralo_ya"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"

        android:id="@+id/rl_body_1"
        android:layout_below="@+id/rl_login"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">

        <!--Nombre-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_header_border"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icono_user"
                android:layout_gravity="center"
                android:tint="#888585"
                android:layout_weight="1"

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOMBRE"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/et_create_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:layout_below="@+id/titulo"
                    android:hint="Encuentralo" />


            </RelativeLayout>

        </LinearLayout>

        <!--Apellidos-->
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_boody_border"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icono_user"
                android:layout_gravity="center"
                android:tint="#888585"
                android:layout_weight="1"

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/titulo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="APELLIDOS"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/et_create_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:layout_below="@+id/titulo2"
                    android:hint="Encuentralo" />


            </RelativeLayout>

        </LinearLayout>

        <!--Correo electronico-->
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_boody_border"
            >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icono_mail"
                android:layout_gravity="center"
                android:tint="#888585"
                android:layout_weight="1"

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/titulo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CORREO ELECTRONICO"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/et_create_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:layout_below="@+id/titulo3"
                    android:hint="ejemplo@encuentraloya.com" />


            </RelativeLayout>

        </LinearLayout>

        <!--Contrasenia-->
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_boody_border"
            >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icono_candado"
                android:layout_gravity="center"
                android:tint="#888585"
                android:layout_weight="1"

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/titulo4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONTRASEÑA"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/et_create_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:layout_below="@+id/titulo4"
                    android:hint="****************" />


            </RelativeLayout>

        </LinearLayout>

        <!--Confirmar contrasenia-->
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_footer_border"
            >

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icono_candado"
                android:layout_gravity="center"
                android:tint="#888585"
                android:layout_weight="1"

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/titulo5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONFIRMAR CONTRASEÑA"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/et_create_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:layout_below="@+id/titulo5"
                    android:hint="****************" />


            </RelativeLayout>

        </LinearLayout>

        <!--boton registrar-->
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_create_user"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_border_test"
            android:text="REGISTRARME" />

        <ProgressBar
            android:id="@+id/progress_create_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:visibility="gone" />



    </LinearLayout>

    </RelativeLayout>


    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#354A6B"
            >
            <!--acceder-->
            <TextView
                android:id="@+id/tv_create_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textColor="#DDE0E5"
                android:text="Ya está registrado? Login" />



        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>